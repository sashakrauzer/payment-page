{
  "name": "npm-builder",
  "version": "0.1.0",
  "description": "builder for web projects",
  "main": "index.js",
  "scripts": {
    "build:html": "pug assets -o dist",
    "build:css": "node-sass assets/css/main.scss -o dist/css/ --output-style compressed",
    "build:js": "mkdirp dist/js && browserify assets/js/main.js > dist/js/script.js",
    "build": "mkdirp dist && npm-run-all -p build:**",
    "watch:html": "pug assets -o dev -w -P",
    "watch:css": "node-sass assets/css/main.scss -o dev/css/ --source-map true && node-sass assets/css/main.scss -o dev/css/ -wr --source-map true",
    "watch:js": "mkdirp dev/js && watchify --debug assets/js/main.js -o dev/js/script.js",
    "dev": "mkdirp dev && npm-run-all -p server watch:*",
    "server": "browser-sync start --server dev/ --files dev/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Aleksandr Gusev",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^2.26.7",
    "browserify": "^16.5.0",
    "mkdirp": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "watchify": "^3.11.1"
  }
}
